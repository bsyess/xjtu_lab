<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_email"
        android:drawableLeft="@android:drawable/ic_menu_myplaces"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:inputType="text"
        android:ems="10"
        android:hint="请输入您的用户名"
        />

    <EditText
        android:id="@+id/identifying_code"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:ems="10"
        android:hint="请输入验证码"
        android:layout_below="@+id/edit_email"
        />

    <Button
        android:id="@+id/register_btn_send"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_email"
        android:layout_toRightOf="@+id/identifying_code"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="发送验证码"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:background="#BA55D3"/>

    <EditText
        android:id="@+id/edit_pwd_new"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/identifying_code"
        android:layout_centerHorizontal="true"
        android:hint="请输入您的新密码"
        />

    <EditText
        android:id="@+id/edit_pwd_check"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="请确定您的新密码"
        android:layout_below="@+id/edit_pwd_new"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="确定"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:onClick="sure_to_reset"
        android:background="#7B68EE"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/edit_pwd_new"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
